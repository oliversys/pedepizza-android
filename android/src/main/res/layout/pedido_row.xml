<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp">

                <br.com.oliverapps.pedepizza.pedido.CustomNumberPicker
                    android:padding="5dp"
                    android:id="@+id/qtd"
                    android:layout_column="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nomePizza"
                    android:text="Marguerita"
                    android:textSize="22dp"
                    android:fontFamily="Sans"
                    android:layout_toRightOf="@+id/qtd"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Base.Widget.AppCompat.ActionButton.Overflow"
                    android:background="@color/material_deep_teal_200"
                    android:id="@+id/precoPizza"
                    android:text="R$ 33"
                    android:layout_toRightOf="@+id/nomePizza"
                    android:gravity="center_vertical"
                    android:textSize="22dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

</LinearLayout>