<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
	    <!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>

	<style name="ratingbar_pequena" parent="@android:style/Widget.RatingBar">
	   <item name="android:progressDrawable">@drawable/ratingpizza</item>
	   <item name="android:minHeight">30dp</item>
	   <item name="android:maxHeight">30dp</item>	   
	   <!--  item name="android:alpha">0.5</item>-->
	</style>    
	
	<style name="texto_lista_pizzarias" parent="@android:style/Widget.Holo.TextView">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item> 		
		<item name="android:textSize">16sp</item>
		<item name="android:layout_marginRight">10dip</item>
		<item name="android:layout_marginLeft">10dip</item>
		<item name="android:textColor">#e3ee13</item>
		<item name="android:textStyle">bold</item>
	</style>
    
</resources>