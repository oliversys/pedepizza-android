<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="ratingbar_pequena" parent="@android:style/Widget.RatingBar">
	   <item name="android:progressDrawable">@drawable/ratingpizza</item>
	   <item name="android:minHeight">30dp</item>
	   <item name="android:maxHeight">30dp</item>
	   <!--  item name="android:alpha">0.5</item>-->
	</style>    
	
	<style name="texto_lista_pizzarias" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:textSize">16sp</item>
		<item name="android:layout_marginRight">10dip</item>
		<item name="android:layout_marginLeft">10dip</item>
		<item name="android:textColor">#000000</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="PedePizzaTheme" parent="@android:style/Theme.Light">
		<item name="android:listViewStyle">@style/CustomListView</item>
		<item name="android:textViewStyle">@style/CustomTextView</item>
	</style>
	<style name="CustomListView" parent="@android:style/Widget.ListView">
		<item name="android:background">#FFFFFF</item>
		<item name="android:fastScrollEnabled">true</item>
	</style>
	<style name="CustomTextView" parent="@android:style/Widget.TextView">
		<item name="android:typeface">monospace</item>
		<item name="android:shadowColor">#000000</item>
		<item name="android:shadowRadius">2.</item>
		<item name="android:shadowDx">4</item>
		<item name="android:shadowDy">4</item>
	</style>

	<style name="Theme.Splash" parent="android:Theme">
		<item name="android:windowBackground">@drawable/ic_launcher</item>
		<item name="android:windowNoTitle">true</item>
	</style>

</resources>